{
  "name": "dpop-auth",
  "version": "1.2.0",
  "description": "Modern device-bound authentication with DPoP (Demonstration of Proof-of-Possession) tokens - simplified API with full TypeScript support",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:clean": "rmdir /s /q dist && npm run build",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build:clean && npm test",
    "docs": "typedoc src/index.ts",
    "example": "node examples/basic-usage.js"
  },
  "keywords": [
    "dpop",
    "authentication",
    "jwt",
    "security",
    "device-binding",
    "proof-of-possession",
    "anti-scraping",
    "express",
    "middleware",
    "cryptography",
    "typescript",
    "esm",
    "modern",
    "simplified"
  ],
  "author": {
    "name": "Abhinay Ambati",
    "email": "abhinayambati4@gmail.com"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/AbhinayAmbati/dpop-auth.git"
  },
  "bugs": {
    "url": "https://github.com/AbhinayAmbati/dpop-auth/issues"
  },
  "homepage": "https://github.com/AbhinayAmbati/dpop-auth#readme",
  "dependencies": {
    "jose": "^5.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
